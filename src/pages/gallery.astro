---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Gallery | El Pocho Antojitos Bar" description="Browse photos of El Pocho Antojitos Bar in Toronto. See our food, drinks, restaurant interior, and patio.">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-20">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/2133989/pexels-photo-2133989.jpeg" 
        alt="El Pocho atmosphere" 
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-charcoal-900 via-charcoal-900/90 to-charcoal-900/90"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6 fade-in">
          Gallery
        </h1>
        <p class="text-xl text-white/80 mb-6 fade-in">
          Experience the vibrant atmosphere and delicious food of El Pocho through our photo gallery.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Gallery Grid -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 fade-in">
        <!-- Gallery Item 1 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/2092507/pexels-photo-2092507.jpeg" 
            alt="El Pocho restaurant patio" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Outdoor Patio</h3>
            <p class="text-white/90">Our vibrant patio space for enjoying meals in the open air.</p>
          </div>
        </div>
        
        <!-- Gallery Item 2 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/5737254/pexels-photo-5737254.jpeg" 
            alt="El Pocho tacos" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Authentic Tacos</h3>
            <p class="text-white/90">Our signature street-style tacos with fresh ingredients.</p>
          </div>
        </div>
        
        <!-- Gallery Item 3 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/2531184/pexels-photo-2531184.jpeg" 
            alt="El Pocho cocktails" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Craft Cocktails</h3>
            <p class="text-white/90">Our signature handcrafted cocktails featuring premium tequila and mezcal.</p>
          </div>
        </div>
        
        <!-- Gallery Item 4 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/7613568/pexels-photo-7613568.jpeg" 
            alt="El Pocho elotes" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Elotes</h3>
            <p class="text-white/90">Mexican street corn with cotija cheese, lime, and spices.</p>
          </div>
        </div>
        
        <!-- Gallery Item 5 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/2235841/pexels-photo-2235841.jpeg" 
            alt="El Pocho interior" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Restaurant Interior</h3>
            <p class="text-white/90">Our warm and inviting dining area with vibrant Mexican-inspired decor.</p>
          </div>
        </div>
        
        <!-- Gallery Item 6 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/10305696/pexels-photo-10305696.jpeg" 
            alt="El Pocho churros" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Churros</h3>
            <p class="text-white/90">Our traditional churros served with chocolate dipping sauce.</p>
          </div>
        </div>
        
        <!-- Gallery Item 7 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/7260637/pexels-photo-7260637.jpeg" 
            alt="El Pocho chef cooking" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">In the Kitchen</h3>
            <p class="text-white/90">Our talented chefs preparing authentic Mexican dishes.</p>
          </div>
        </div>
        
        <!-- Gallery Item 8 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/5589055/pexels-photo-5589055.jpeg" 
            alt="El Pocho margarita" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Signature Margaritas</h3>
            <p class="text-white/90">Our famous margaritas made with premium tequila and fresh ingredients.</p>
          </div>
        </div>
        
        <!-- Gallery Item 9 -->
        <div class="group relative overflow-hidden rounded-xl aspect-square shadow-warm cursor-pointer">
          <img 
            src="https://images.pexels.com/photos/8512601/pexels-photo-8512601.jpeg" 
            alt="El Pocho happy hour" 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white transform translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
            <h3 class="text-xl font-display font-bold">Happy Hour</h3>
            <p class="text-white/90">Join us for happy hour specials on food and drinks.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Instagram Preview -->
  <section class="py-16 md:py-24 bg-texture">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-4 fade-in">Follow Us on Instagram</h2>
        <p class="text-lg text-charcoal-700 max-w-2xl mx-auto mb-6 fade-in">Stay updated with our latest dishes, events, and behind-the-scenes moments.</p>
        <a href="https://www.instagram.com/elpochobar/" class="inline-flex items-center text-accent-500 hover:text-accent-600 font-medium transition-colors fade-in" target="_blank" rel="noopener noreferrer">
          @elpochobar
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 ml-1">
            <path fill-rule="evenodd" d="M8.25 3.75H19.5a.75.75 0 01.75.75v11.25a.75.75 0 01-1.5 0V6.31L5.03 20.03a.75.75 0 01-1.06-1.06L17.69 5.25H8.25a.75.75 0 010-1.5z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <CallToAction />
</Layout>