---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Reservations | El Pocho Antojitos Bar" description="Reserve a table at El Pocho Antojitos Bar in Toronto. Enjoy authentic Mexican street food in a vibrant atmosphere.">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-20">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/1395967/pexels-photo-1395967.jpeg" 
        alt="El Pocho restaurant interior" 
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-charcoal-900 via-charcoal-900/90 to-charcoal-900/90"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6 fade-in">
          Make a Reservation
        </h1>
        <p class="text-xl text-white/80 mb-6 fade-in">
          Reserve your table at El Pocho and experience authentic Mexican street food in a vibrant atmosphere.
        </p>
      </div>
    </div>
  </section>
  
  <!-- OpenTable Integration -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="bg-white rounded-xl shadow-xl overflow-hidden fade-in">
          <div class="aspect-[16/10] w-full">
            <iframe 
              src="https://www.opentable.com/restref/client/?restref=732292&lang=en-US&ot_source=Restaurant%20website&color=5&corrid=72fb486f-bc35-47e4-a772-13cc3a59b2a7" 
              frameborder="0" 
              class="w-full h-[800px]"
              title="El Pocho Reservations"
            ></iframe>
          </div>
        </div>
        
        <div class="mt-12 text-center">
          <p class="text-charcoal-700 mb-6 fade-in">
            Having trouble with the reservation system? Give us a call directly at (416) 551-8131.
          </p>
          <a href="tel:4165518131" class="btn btn-secondary fade-in">Call Now</a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Special Events -->
  <section class="py-16 md:py-24 bg-texture">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-4 fade-in">Special Events</h2>
          <p class="text-lg text-charcoal-700 max-w-2xl mx-auto mb-12 fade-in">
            Planning a special occasion? El Pocho offers group reservations and custom menus for your next celebration.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 stagger-delay">
          <div class="bg-white rounded-xl overflow-hidden shadow-warm fade-in group">
            <div class="p-8">
              <h3 class="text-xl font-display font-bold mb-4">Group Dining</h3>
              <p class="text-charcoal-700 mb-4">
                Whether it's a birthday, anniversary, or corporate event, our team can accommodate groups of various sizes with personalized service.
              </p>
              <p class="text-charcoal-700 mb-4">
                For groups of 8 or more, we recommend making a reservation at least one week in advance.
              </p>
              <a href="mailto:hola@elpocho.ca" class="text-accent-500 hover:text-accent-600 font-medium inline-flex items-center transition-colors">
                Contact us for details
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1">
                  <path fill-rule="evenodd" d="M5 10a.75.75 0 01.75-.75h6.638L10.23 7.29a.75.75 0 111.04-1.08l3.5 3.25a.75.75 0 010 1.08l-3.5 3.25a.75.75 0 11-1.04-1.08l2.158-1.96H5.75A.75.75 0 015 10z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
          
          <div class="bg-white rounded-xl overflow-hidden shadow-warm fade-in group">
            <div class="p-8">
              <h3 class="text-xl font-display font-bold mb-4">Private Events</h3>
              <p class="text-charcoal-700 mb-4">
                For a truly special experience, consider booking our private dining area or entire restaurant for your next event.
              </p>
              <p class="text-charcoal-700 mb-4">
                Our events team will work with you to create a custom menu and experience tailored to your needs.
              </p>
              <a href="mailto:hola@elpocho.ca" class="text-accent-500 hover:text-accent-600 font-medium inline-flex items-center transition-colors">
                Inquire about private events
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1">
                  <path fill-rule="evenodd" d="M5 10a.75.75 0 01.75-.75h6.638L10.23 7.29a.75.75 0 111.04-1.08l3.5 3.25a.75.75 0 010 1.08l-3.5 3.25a.75.75 0 11-1.04-1.08l2.158-1.96H5.75A.75.75 0 015 10z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
</Layout>