// Function to determine tag styling
const getTagClass = (tag: string) => {
  tag = tag.toLowerCase();
  if (tag.includes("vegetarian")) {
    return "bg-primary-100 text-primary-700";
  }
  if (tag.includes("gluten-free")) {
    return "bg-secondary-100 text-secondary-700";
  }
  return "bg-gray-100 text-gray-700"; // Default style
};

const orderLink = "https://menu.orderup.ai/19/takeout?utm_source=merchant_website&utm_medium=order_online_menu&utm_campaign=el_pocho&utm_content=toronto&ec=";
const reservationLink = "https://www.opentable.com/restref/client/?restref=732292&lang=en-US&ot_source=Restaurant%20website&color=5&corrid=72fb486f-bc35-47e4-a772-13cc3a59b2a7";
---

<Layout title="Menu | El Pocho Antojitos Bar" description="Explore our menu of authentic Mexican street food, tacos, elotes, churros and craft cocktails at El Pocho Antojitos Bar in Toronto.">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-20">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/1640772/pexels-photo-1640772.jpeg" 
        alt="Mexican food spread" 
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-charcoal-900 via-charcoal-900/90 to-charcoal-900/90"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6 fade-in">
          Our Menu
        </h1>
        <p class="text-xl text-white/80 mb-8 fade-in">
          Authentic Mexican street food made with traditional recipes and fresh ingredients.
        </p>
        <div class="flex justify-center space-x-4 fade-in">
          <a href={orderLink} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
            Order Online
          </a>
           <a href={reservationLink} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
            Make a Reservation
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Order/Reservation Buttons Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
         <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-6 fade-in">Ready to Eat?</h2>
         <p class="text-lg text-charcoal-700 mb-8 fade-in">
           Order your favorite Mexican street food online for pickup or delivery, or make a reservation to dine with us.
         </p>
        <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4 fade-in">
          <a href={orderLink} class="btn btn-primary w-full sm:w-auto" target="_blank" rel="noopener noreferrer">
            Order Online Now
          </a>
           <a href={reservationLink} class="btn btn-secondary w-full sm:w-auto" target="_blank" rel="noopener noreferrer">
            Reserve Your Table
          </a>
        </div>
         <p class="text-charcoal-700 mt-8 fade-in">
            Prefer to call? Reach us at <a href="tel:4165518131" class="text-primary-600 hover:underline">(416) 551-8131</a>.
          </p>
      </div>
    </div>
  </section>

  <!-- Menu Section -->
  <section class="py-16 md:py-24 bg-texture">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-4 fade-in">Full Menu</h2>
        <p class="text-lg text-charcoal-700 max-w-2xl mx-auto fade-in">Authentic flavors from the streets of Mexico. Prices are in CAD.</p>
      </div>

      {Object.entries(menu).map(([category, items]) => (
        <div class="mb-16 fade-in">
          <h3 class="text-2xl md:text-3xl font-display font-semibold text-primary-700 mb-10 capitalize text-center border-b-2 border-primary-200 pb-4">{category.replace('_', ' ')}</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {items.map(item => (
              <div class="bg-white rounded-xl overflow-hidden shadow-warm flex flex-col">
                {/* Optional Image Placeholder - Add image logic here if needed */}
                {/* <div class="relative h-52 overflow-hidden">
                  <img src="placeholder.jpg" alt={item.name} class="w-full h-full object-cover"/>
                </div> */}
                <div class="p-6 flex flex-col flex-grow">
                  <h4 class="text-xl font-display font-bold mb-2">{item.name}</h4>
                  {item.description && <p class="text-charcoal-700 mb-4 flex-grow">{item.description}</p>}
                  <div class="flex flex-wrap gap-2 mb-4">
                    {item.tags && item.tags.map(tag => (
                      <span class={`inline-block px-2 py-1 text-xs font-medium rounded-md ${getTagClass(tag)}`}>{tag}</span>
                    ))}
                  </div>
                  <p class="text-lg font-semibold text-secondary-600 mt-auto">{item.price}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Dietary Preferences -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-4 fade-in">Dietary Information & Ambiance</h2>
           <p class="text-lg text-charcoal-700 fade-in">We offer gluten-free options and a casual dining experience.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-center stagger-delay">
           <div class="p-6 border border-secondary-200 rounded-xl bg-secondary-50 fade-in">
            <div class="inline-block p-3 bg-secondary-100 rounded-full mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 text-secondary-700">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm-2.625 6c-.54 0-.828.419-.936.634a1.96 1.96 0 00-.189.866c0 .298.059.605.189.866.108.215.395.634.936.634.54 0 .828-.419.936-.634.13-.26.189-.568.189-.866 0-.298-.059-.605-.189-.866-.108-.215-.395-.634-.936-.634zm4.314.634c.108-.215.395-.634.936-.634.54 0 .828.419.936.634.13.26.189.568.189.866 0 .298-.059.605-.189.866-.108.215-.395.634-.936.634-.54 0-.828-.419-.936-.634a1.96 1.96 0 01-.189-.866c0-.298.059.605.189-.866zm-4.34 7.964a.75.75 0 01-1.061-1.06 5.236 5.236 0 013.73-1.538 5.236 5.236 0 013.695 1.538.75.75 0 11-1.061 1.06 3.736 3.736 0 00-2.639-1.098 3.736 3.736 0 00-2.664 1.098z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold mb-2">Gluten-Free Options</h3>
            <p class="text-charcoal-700">Many of our dishes are naturally gluten-free. Please inform your server of any allergies.</p>
          </div>

           <div class="p-6 border border-accent-200 rounded-xl bg-accent-50 fade-in">
             <div class="inline-block p-3 bg-accent-100 rounded-full mb-4">
               <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 text-accent-700">
                 <path d="M11.25 3.75A1.5 1.5 0 009.75 5.25v1.5H6V5.25A1.5 1.5 0 004.5 3.75h-1.5A.75.75 0 002.25 4.5v15A.75.75 0 003 20.25h1.5A1.5 1.5 0 006 18.75v-1.5h3.75v1.5A1.5 1.5 0 0011.25 20.25h1.5a.75.75 0 00.75-.75v-15a.75.75 0 00-.75-.75h-1.5zM9.75 8.25v7.5H6v-7.5h3.75zM19.5 3.75A1.5 1.5 0 0018 5.25v1.5h-3.75V5.25A1.5 1.5 0 0012.75 3.75h-1.5A.75.75 0 0010.5 4.5v15a.75.75 0 00.75.75h1.5A1.5 1.5 0 0014.25 18.75v-1.5H18v1.5A1.5 1.5 0 0019.5 20.25h1.5a.75.75 0 00.75-.75v-15a.75.75 0 00-.75-.75h-1.5zM18 8.25v7.5h-3.75v-7.5H18z" />
               </svg>
             </div>
             <h3 class="text-xl font-display font-bold mb-2">Casual Ambiance</h3>
             <p class="text-charcoal-700">Enjoy our vibrant atmosphere with bar seating and an outdoor patio (weather permitting).</p>
           </div>
        </div>
      </div>
    </div>
  </section>

  <CallToAction />
</Layout>