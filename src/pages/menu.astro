    { name: "Salad", description: "Green and pickled cabbage, jicama, nopales, cotija, onion, corn, and cilantro with lime and agave dressing.", price: "$10.00", tags: ["Vegetarian", "Gluten-Free"] },
    { name: "Roasted Squash and Mole Salad", description: "Roasted vegetables, mole, fried kale, pepitas, sesame, and pomegranate.", price: "$12.00", tags: ["Vegetarian", "Gluten-Free"] },
  ],
  desserts: [
    { name: "Churros with Dulce de Leche", description: "Classic fried dough pastry served with caramel sauce.", price: "$10.50", tags: ["Vegetarian"] },
