    { name: "Pocho Fries", description: "Fries with barbacoa or vegetarian version.", price: "$12.75", tags: ["Vegetarian Option", "Gluten-Free Option"] },
  ],
  tacos: [
    { name: "Fish Tacos (2)", description: "Battered fish, coleslaw, homemade aioli, and pickled onions.", price: "$10.50", tags: [] },
    { name: "Gringo Tacos (2)", description: "Beef barbacoa, cotija cheese, lettuce, white onion, tomato, cream, and Valentina sauce.", price: "$13.50", tags: ["Gluten-Free Option"] },
    { name: "Carne Asada Tacos (2)", description: "Skirt steak, white onion, spicy tomato salsa, and avocado salsa.", price: "$12.50", tags: ["Gluten-Free Option"] },
    { name: "Carnitas Tacos (2)", description: "Smoked pork shoulder and belly, habanero salsa, guacamole, cilantro, and onion.", price: "$11.50", tags: ["Gluten-Free Option"] },
    { name: "Poblano Tacos", description: "Roasted poblano pepper with cotija and Oaxaca cheese, spicy salsa, and pickled onions.", price: "$10.50", tags: ["Vegetarian", "Gluten-Free Option"] },
    { name: "Black Bean Tacos", description: "Refried black beans, cotija cheese, homemade slaw, guacamole, habanero salsa, and cilantro.", price: "$10.50", tags: ["Vegetarian", "Gluten-Free Option"] },
  ],
  tostadas: [
     { name: "Avocado Tostada (2)", description: "Tostada with fried corn, onion, pickled cabbage, avocado, cream, habanero salsa, and cilantro.", price: "$10.50", tags: ["Vegetarian", "Gluten-Free Option"] },
     { name: "Tinga Tostada", description: "Chicken tinga, pomegranate, pineapple, iceberg lettuce, cream, and cilantro.", price: "$11.00", tags: ["Gluten-Free Option"] },
  ],
