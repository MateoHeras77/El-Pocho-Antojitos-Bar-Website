  ],
  alcoholic_drinks: [
    { name: "Corona Beer (330ml)", description: "Classic Mexican pale lager.", price: "$7.00", tags: ["Alcoholic", "Beer"] },
    { name: "Negra Modelo (355ml)", description: "Smooth, dark Vienna-style lager.", price: "$7.00", tags: ["Alcoholic", "Beer"] },
    { name: "Moraza Tempranillo Rioja Wine (750ml)", description: "Spanish red wine with notes of cherry and spice.", price: "$45.00", tags: ["Alcoholic", "Wine"] },
    { name: "Life In The Clouds DDH IPA (473ml)", description: "Hazy, juicy India Pale Ale.", price: "$8.25", tags: ["Alcoholic", "Beer", "Craft"] },
    { name: "Guava Gose (473ml)", description: "Tart and fruity Gose-style ale with guava.", price: "$8.85", tags: ["Alcoholic", "Beer", "Craft"] },
  ],
  sides: [
    { name: "Sliced Avocado", description: "Freshly sliced avocado.", price: "$3.00", tags: ["Vegetarian", "Gluten-Free"] },
    { name: "Guacamole", description: "Our signature house-made guacamole.", price: "$4.50", tags: ["Vegetarian", "Gluten-Free"] },
    { name: "Habanero Salsa", description: "Fiery habanero pepper salsa.", price: "$2.50", tags: ["Vegetarian", "Gluten-Free", "Spicy"] },
    { name: "Spicy Salsa", description: "House-made spicy red salsa.", price: "$3.95", tags: ["Vegetarian", "Gluten-Free", "Spicy"] },
    { name: "Salsa Verde", description: "Tangy green tomatillo salsa.", price: "$3.95", tags: ["Vegetarian", "Gluten-Free"] },
    { name: "Corn Tortilla Chips", description: "Crispy fried corn tortilla chips.", price: "$6.50", tags: ["Vegetarian", "Gluten-Free Option"] },
    { name: "Fries with Chipotle Aioli", description: "Crispy fries served with a smoky chipotle aioli.", price: "$6.50", tags: ["Vegetarian", "Gluten-Free Option"] },
