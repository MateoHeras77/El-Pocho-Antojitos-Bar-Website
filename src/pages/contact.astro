---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Contact Us | El Pocho Antojitos Bar" description="Contact El Pocho Antojitos Bar in Toronto. Find our hours, location, and reservation information.">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-20">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/2510584/pexels-photo-2510584.jpeg" 
        alt="El Pocho exterior" 
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-charcoal-900 via-charcoal-900/90 to-charcoal-900/90"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6 fade-in">
          Contact Us
        </h1>
        <p class="text-xl text-white/80 mb-6 fade-in">
          We'd love to hear from you! Get in touch with El Pocho for reservations, questions, or feedback.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Info & Map -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div class="fade-in">
            <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-8">Visit Us</h2>
            
            <div class="space-y-6 mb-12">
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-500 mr-4">
                    <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-display font-bold mb-2">Address</h3>
                  <p class="text-charcoal-700">2 Follis Avenue</p>
                  <p class="text-charcoal-700">Toronto, ON M6G 1S3</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-500 mr-4">
                    <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-display font-bold mb-2">Phone</h3>
                  <p class="text-charcoal-700">(416) 551-8131</p>
                  <p class="text-charcoal-700">(647) 794-7115</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-500 mr-4">
                    <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                    <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-display font-bold mb-2">Email</h3>
                  <p class="text-charcoal-700">
                    <a href="mailto:hola@elpocho.ca" class="hover:text-accent-500 transition-colors">hola@elpocho.ca</a>
                  </p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-500 mr-4">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-display font-bold mb-2">Hours</h3>
                  <div class="text-charcoal-700">
                    <p class="font-medium">Monday–Friday:</p>
                    <p class="pl-4 mb-2">12PM–11PM (Lunch, Happy Hour, Dinner)</p>
                    <p class="font-medium">Saturday–Sunday:</p>
                    <p class="pl-4">10AM–3PM (Brunch)</p>
                    <p class="pl-4">5PM–11PM (Dinner)</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="flex space-x-4">
              <a href="https://www.instagram.com/elpochobar/" target="_blank" rel="noopener noreferrer" class="text-charcoal-700 hover:text-accent-500 transition-colors" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7">
                  <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153.509.5.902 1.105 1.153 1.772.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 01-1.153 1.772c-.5.508-1.105.902-1.772 1.153-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 01-1.772-1.153 4.904 4.904 0 01-1.153-1.772c-.247-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 011.153-1.772A4.897 4.897 0 015.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 1.802c-2.67 0-2.986.01-4.04.059-.976.045-1.505.207-1.858.344-.466.181-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.048 1.055-.058 1.37-.058 4.04 0 2.67.01 2.986.058 4.04.045.976.207 1.505.344 1.858.181.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.04.058 2.67 0 2.987-.01 4.04-.058.976-.045 1.505-.207 1.858-.344.466-.181.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.04 0-2.67-.01-2.986-.058-4.04-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.054-.048-1.37-.058-4.04-.058zm0 3.063a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 8.468a3.333 3.333 0 100-6.666 3.333 3.333 0 000 6.666zm6.538-8.671a1.2 1.2 0 11-2.4 0 1.2 1.2 0 012.4 0z" />
                </svg>
              </a>
              <a href="https://www.facebook.com/elpochobar/" target="_blank" rel="noopener noreferrer" class="text-charcoal-700 hover:text-accent-500 transition-colors" aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7">
                  <path d="M12 2.04c-5.5 0-10 4.49-10 10.02 0 5 3.66 9.15 8.44 9.9v-7H7.9v-2.9h2.54V9.85c0-2.51 1.49-3.89 3.78-3.89 1.09 0 2.23.19 2.23.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 0 0 8.44-9.9c0-5.53-4.5-10.02-10-10.02Z" />
                </svg>
              </a>
            </div>
          </div>
          
          <div class="fade-in">
            <div class="h-full min-h-[400px] rounded-xl overflow-hidden shadow-warm">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.1663041804937!2d-79.41761498417!3d43.66498447912096!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b34b436c33039%3A0x4573b2d8d7478f7a!2s2%20Follis%20Ave%2C%20Toronto%2C%20ON%20M6G%201S3%2C%20Canada!5e0!3m2!1sen!2sus!4v1647883714867!5m2!1sen!2sus" 
                width="100%" 
                height="100%" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy"
                title="El Pocho location map"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Contact Form Section -->
  <section class="py-16 md:py-24 bg-texture">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-charcoal-900 mb-4 fade-in">Get in Touch</h2>
          <p class="text-lg text-charcoal-700 fade-in">
            Have a question or feedback? Send us a message and we'll get back to you as soon as possible.
          </p>
        </div>
        
        <div class="bg-white rounded-xl shadow-warm p-8 fade-in">
          <form>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="name" class="block text-charcoal-700 font-medium mb-2">Name</label>
                <input type="text" id="name" name="name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors" required />
              </div>
              <div>
                <label for="email" class="block text-charcoal-700 font-medium mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors" required />
              </div>
            </div>
            
            <div class="mb-6">
              <label for="subject" class="block text-charcoal-700 font-medium mb-2">Subject</label>
              <select id="subject" name="subject" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors">
                <option value="general">General Inquiry</option>
                <option value="reservation">Reservation Question</option>
                <option value="feedback">Feedback</option>
                <option value="private-event">Private Event</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="mb-6">
              <label for="message" class="block text-charcoal-700 font-medium mb-2">Message</label>
              <textarea id="message" name="message" rows="6" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors" required></textarea>
            </div>
            
            <div class="text-center">
              <button type="submit" class="btn btn-primary">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  
  <CallToAction />
</Layout>