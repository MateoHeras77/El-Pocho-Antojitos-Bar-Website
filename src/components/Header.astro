<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="z-10">
      <span class="sr-only">El Pocho</span>
      <img src="/images/logo.webp" alt="El Pocho Antojitos Bar" class="h-14 md:h-16" />
    </a>
    
    <nav class="hidden md:block">
      <ul class="flex space-x-8 text-white font-medium">
        <li><a href="/" class="hover:text-accent-300 transition-colors">Home</a></li>
        <li><a href="/menu" class="hover:text-accent-300 transition-colors">Menu</a></li>
        <li><a href="/reservations" class="hover:text-accent-300 transition-colors">Reservations</a></li>
        <li><a href="/about" class="hover:text-accent-300 transition-colors">About</a></li>
        <li><a href="/contact" class="hover:text-accent-300 transition-colors">Contact</a></li>
        <li><a href="/gallery" class="hover:text-accent-300 transition-colors">Gallery</a></li>
      </ul>
    </nav>
    
    <div class="hidden md:block">
      <a href="https://menu.orderup.ai/19/takeout?utm_source=merchant_website&utm_medium=order_online_menu&utm_campaign=el_pocho&utm_content=toronto&ec=" class="btn btn-primary" target="_blank" rel="noopener noreferrer">Order Online</a>
    </div>
    
    <button id="mobile-menu-toggle" class="md:hidden text-white z-10" aria-label="Toggle Menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="fixed inset-0 bg-charcoal-900 bg-opacity-95 flex flex-col items-center justify-center z-40 transform -translate-y-full transition-transform duration-300">
    <nav class="w-full">
      <ul class="flex flex-col items-center space-y-8 text-white text-2xl font-medium">
        <li><a href="/" class="hover:text-accent-400 transition-colors">Home</a></li>
        <li><a href="/menu" class="hover:text-accent-400 transition-colors">Menu</a></li>
        <li><a href="/reservations" class="hover:text-accent-400 transition-colors">Reservations</a></li>
        <li><a href="/about" class="hover:text-accent-400 transition-colors">About</a></li>
        <li><a href="/contact" class="hover:text-accent-400 transition-colors">Contact</a></li>
        <li><a href="/gallery" class="hover:text-accent-400 transition-colors">Gallery</a></li>
        <li class="pt-6">
          <a href="https://menu.orderup.ai/19/takeout?utm_source=merchant_website&utm_medium=order_online_menu&utm_campaign=el_pocho&utm_content=toronto&ec=" class="btn btn-primary text-xl" target="_blank" rel="noopener noreferrer">Order Online</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuLinks = document.querySelectorAll('#mobile-menu a');
  
  // Handle header background on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header.classList.add('bg-charcoal-900', 'shadow-md');
      header.classList.remove('bg-transparent');
    } else {
      header.classList.remove('bg-charcoal-900', 'shadow-md');
      header.classList.add('bg-transparent');
    }
  });
  
  // Initial check for scroll position
  if (window.scrollY > 50) {
    header.classList.add('bg-charcoal-900', 'shadow-md');
  } else {
    header.classList.add('bg-transparent');
  }
  
  // Mobile menu toggle
  mobileMenuToggle.addEventListener('click', () => {
    const isOpen = mobileMenu.classList.contains('translate-y-0');
    
    if (isOpen) {
      mobileMenu.classList.remove('translate-y-0');
      mobileMenu.classList.add('-translate-y-full');
      mobileMenuToggle.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      `;
      document.body.classList.remove('overflow-hidden');
    } else {
      mobileMenu.classList.add('translate-y-0');
      mobileMenu.classList.remove('-translate-y-full');
      mobileMenuToggle.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      `;
      document.body.classList.add('overflow-hidden');
    }
  });
  
  // Close mobile menu when a link is clicked
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-y-0');
      mobileMenu.classList.add('-translate-y-full');
      mobileMenuToggle.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      `;
      document.body.classList.remove('overflow-hidden');
    });
  });
</script>